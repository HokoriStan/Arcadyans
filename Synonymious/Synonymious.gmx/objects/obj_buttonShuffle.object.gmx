                for (var i=0;i&lt;instance_number(obj_letterBox);i++)
                {
                    var instance = instance_find(obj_letterBox,i);
                    var changePos = (instance.x == instance.originalXPos &amp;&amp; instance.y == instance.originalYPos)
                
                    var stringVector = ds_list_find_value(list,i);
                    var seperatorIndex = string_pos("|",stringVector);
                    instance.originalXPos = real(string_copy(stringVector,0,seperatorIndex-1));
                    instance.originalYPos = real(string_copy(stringVector,seperatorIndex+1,string_length(stringVector)-seperatorIndex));
                
                    if (changePos)
                    {
                        instance.x = instance.originalXPos;
                        instance.y = instance.originalYPos;
                        instance.toXPos = instance.originalXPos;
                        instance.toYPos = instance.originalYPos;
                    }
                }
                ds_list_destroy(list);
            }
        }
        
        if (pressed)
        {
